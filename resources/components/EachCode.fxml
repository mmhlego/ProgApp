<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EachCode">
   <children>
      <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="100.0" prefWidth="700.0" spacing="20.0" style="-fx-background-color: rgba(255, 255, 255, 0.5); -fx-background-radius: 5;">
         <padding>
            <Insets left="25.0" right="25.0" />
         </padding>
         <children>
            <ImageView fx:id="LanguageIMG" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true" />
            <Line endY="80.0" />
            <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="80.0" prefWidth="120.0">
               <children>
                  <Label prefHeight="30.0" prefWidth="120.0" text="Code Type:" textFill="WHITE">
                     <font>
                        <Font name="Consolas" size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="CodeTypeLBL" alignment="CENTER" prefHeight="30.0" prefWidth="120.0" text="-" textFill="WHITE">
                     <font>
                        <Font name="Consolas" size="16.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <Line endY="80.0" />
            <TextArea fx:id="DescriptionArea" editable="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="80.0" prefWidth="300.0" styleClass="TextArea" stylesheets="@EachCode.css" text="description" wrapText="true">
               <font>
                  <Font name="Consolas" size="16.0" />
               </font>
            </TextArea>
            <Line endY="80.0" />
            <FlowPane fx:id="TagsBox" hgap="7.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="80.0" prefWidth="100.0" vgap="7.0" />
            <Line endY="80.0" />
            <ImageView fx:id="MoreBTN" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../Resources/Icons/More.png" />
               </image>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </ImageView>
         </children>
      </HBox>
      <VBox fx:id="MoreBox" alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="650.0" spacing="25.0" style="-fx-background-color: rgba(255, 255, 255, 0.4); -fx-background-radius: 0 0 5 5;">
         <children>
            <HBox fx:id="IOBox" prefHeight="50.0" spacing="26.0">
               <children>
                  <VBox fx:id="InBox" prefWidth="412.0" />
                  <VBox fx:id="OutBox" prefWidth="412.0" />
               </children></HBox>
         </children>
         <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </padding>
      </VBox>
   </children>
</VBox>
